{{> menu id="account"}}

<style>
    .column {
        margin-top: 50px;
    }
</style>
<div class="ui two column middle aligned center aligned grid">
    <div class="three wide column">
        <div class="ui fluid teal card">
            <div class="image">
                <img src="https://cdn.glitch.global/a5b20e7a-0b38-4215-95fe-1ece87de474e/defaultAvatar.png?v=1660997962761">
            </div>
            <div class ="content">
        <h2 class="ui header">
            {{user.firstName}} {{user.lastName}}
        </h2>
        <p><b>Email:</b> {{user.email}}</p>
            </div>
        </div>
    </div>
    <div class="6 wide column">
        <h1 class="ui teal header">Update Details</h1>
        <form class="ui left floated segment form" action="/accounts/editmember" method="POST">
            <div class="two fields">
            <div class="field">
                <label>New First Name</label>
                <input placeholder="{{user.firstName}}" type="text" name="firstname" value="{{firstName}}">
            </div>
            <div class="field">
                <label>New Last Name</label>
                <input placeholder="{{user.lastName}}" type="text" name="lastname" value="{{lastName}}">
            </div>
        </div>
            <div class="field">
                <label>New Email</label> <input placeholder="{{user.email}}" name="email" value="{{email}}">
            </div>
            <button class="ui teal submit button">Update Details</button>
        </form>
    </div>
</div>