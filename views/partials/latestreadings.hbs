<section>
    <br>
    <div class="ui five column grid">
        <div class="stretched row">
            <div class="column">
                <div class="ui inverted teal card">
                    <div class="content">
                        <i class="right floated big inverted map marker alternate icon"></i>
                        <div class="header">{{name}}</div>
                        <div class="ui section divider"></div>
                        <div class="description">
                            <p>Lat:{{latitude}}</p>
                            <p>Long:{{longitude}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="ui teal card">
                    <div class="content">
                        <i class="right floated {{latestWeather.weatherIcon}}"></i>
                        <div class="header">Weather</div>
                        <div class="ui section divider"></div>
                        <div class="description">
                            <p>{{latestWeather.conditions}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="ui teal card">
                    <div class="content">
                        <i class="right floated {{latestWeather.tempTrend}}"></i>
                        <i class="right floated big thermometer half icon"></i>
                        <div class="header">Temp</div>
                        <div class="ui section divider"></div>
                        <div class="description">
                            <p>C {{latestWeather.temperature}}</p>
                            <p>F {{latestWeather.tempF}}</p>
                            <p>Max {{latestWeather.maxTemp}}</p>
                            <p>Min {{latestWeather.minTemp}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="ui teal card">
                    <div class="content">
                        <i class="right floated {{latestWeather.windTrend}}"></i>
                        <i class="right floated big wind icon"></i>
                        <div class="header">Wind</div>
                        <div class="ui section divider"></div>
                        <div class="description">
                            <p>{{latestWeather.beaufort}} bft</p>
                            <p>{{latestWeather.windCompass}}</p>
                            <p>Feels Like {{latestWeather.windChill}}</p>
                            <p>Max {{latestWeather.maxWind}}</p>
                            <p>Min {{latestWeather.minWind}}</p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="column">
                <div class="ui teal card">
                    <div class="content">
                        <i class="right floated {{latestWeather.pressureTrend}}"></i>
                        <i class="right floated big compress arrows alternate icon"></i>
                        <div class="header">Pressure</div>
                        <div class="ui section divider"></div>
                        <div class="description">
                            <p>{{latestWeather.pressure}} hpa</p>
                            <p>Max {{latestWeather.maxPressure}}</p>
                            <p>Min {{latestWeather.minPressure}}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <br>
</section>